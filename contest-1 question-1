#include <bits/stdc++.h>
using namespace std;



int main() {
    int n;
    cin >> n;
    cin.ignore(); // consume newline

    string s;
    getline(cin, s);
    
    int ans = 0;
    
    for(int i = 0; i < n; i++){
        
        if(s[i] == 'C'){
            int j = i;
            while(j < n)
            {
                if(s[j] == '*'){
                    ans++;
                }
                if(s[j] == '#'){
                    break;
                }
                j++;
            }
            
            j = i;
            while(j >= 0)
            {
                
                if(s[j] == '*'){
                    ans++;
                }
                if(s[j] == '#'){
                    break;
                }
                j--;
            }
            
            
        }
    }
    
    cout << ans << endl;
    
    

  
  
    return 0;
}
